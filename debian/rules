#!/usr/bin/make -f
# -*- makefile -*-

DESTDIR=$(CURDIR)/debian/ghdl
DESTDIRLIB=$(CURDIR)/debian/libghdlsynth

configure: configure-stamp
configure-stamp:
	dh_testdir
	./configure --with-llvm-config --prefix=/usr
	touch configure-stamp

build: build-arch build-indep
build-arch: build-stamp
build-indep: build-stamp
build-stamp: configure-stamp
	dh_testdir
	$(MAKE)
	$(MAKE) libghdlsynth.so
	makeinfo doc/ghdl.texi
	touch build-stamp

install: install-stamp
install-stamp: build-stamp
	dh_testdir
	dh_testroot
	dh_prep
	$(MAKE) install DESTDIR=$(DESTDIR)
	$(MAKE) install.libghdlsynth DESTDIR=$(DESTDIRLIB)
	rm -r $(DESTDIRLIB)/usr/bin $(DESTDIRLIB)/usr/lib/ghdl
	touch install-stamp

clean:
	dh_testdir
	dh_testroot
	if [ -f Makefile ]; then $(MAKE) distclean ; fi
	$(RM) ghdl.info
	dh_clean

# Build architecture-independent files here.
binary-indep: build install
# We have nothing to do by default.

# Build architecture-dependent files here.
binary-arch: build install
	dh_testdir
	dh_testroot
	dh_installchangelogs 
	dh_installdocs
	dh_installman
	dh_installinfo
	dh_lintian
	dh_link
	dh_strip
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: configure build install clean binary-indep binary-arch binary

